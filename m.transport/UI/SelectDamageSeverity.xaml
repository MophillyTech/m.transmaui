<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
		xmlns:l="clr-namespace:m.transport"
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
		x:Class="m.transport.SelectDamageSeverity" Title="Damage Severity">
	<ContentPage.Content>
		<StackLayout BackgroundColor="{StaticResource PrimaryBackground}" Padding="0">
			<StackLayout BackgroundColor="{StaticResource DarkBackground}" Padding="20,0,0,0">
				<Label VerticalOptions="Center" TextColor="{StaticResource LightestText}" x:Name="DamageArea" />
				<Label VerticalOptions="Center" TextColor="{StaticResource LightestText}" x:Name="DamageType" />
			</StackLayout>
			<ListView BackgroundColor="{StaticResource PrimaryBackground}" VerticalOptions="FillAndExpand" x:Name="DamageSeverityList" ItemSelected="SeveritySelected">
			</ListView>

		</StackLayout>
	</ContentPage.Content>
</ContentPage>
