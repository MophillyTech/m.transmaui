<?xml version="1.0" encoding="UTF-8"?>
<l:ExtendedTextCell xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
		xmlns:l="clr-namespace:m.transport"
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
		x:Class="m.transport.SelectVehicleCell"
		SeparatorColor="{StaticResource ReallyDarkBackground}">
	<StackLayout VerticalOptions="Center">
		<Label FontSize="Large" Text="{Binding VIN}" 
					 TextColor="{Binding Status,Converter={StaticResource statusToColor}}"
					 VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
	</StackLayout>
</l:ExtendedTextCell>