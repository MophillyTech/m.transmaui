<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
		xmlns:l="clr-namespace:m.transport"
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
		x:Class="m.transport.LoadCellHeaderContent" BackgroundColor="{StaticResource BlueBackground}">
	<ContentView.Content>
		<StackLayout BackgroundColor="{StaticResource DarkBackground}" Orientation="Horizontal" Padding="5,0,0,0" >
			<Label TextColor="{StaticResource LightestText}" MinimumWidthRequest="95" VerticalOptions="Center" Text="Destination:" />
			<Label TextColor="{StaticResource LightestText}" VerticalOptions="Center" Text="{Binding Location.DisplayName}"/>
		</StackLayout>
	</ContentView.Content>
</ContentView>