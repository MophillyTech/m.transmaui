<?xml version="1.0" encoding="UTF-8"?>
<l:ExtendedViewCell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
		xmlns:l="clr-namespace:m.transport"
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
		x:Class="m.transport.RunDetailsCell">
	<StackLayout BackgroundColor="{StaticResource PrimaryBackground}" HorizontalOptions="FillAndExpand" Orientation="Horizontal" Padding="10,5">
		<Label x:Name="LocationLabel" Text="{Binding CityStateAddress}" VerticalOptions="Center" FontSize="Small"
			TextColor="{StaticResource DarkestText}" HorizontalOptions="FillAndExpand"/>
		<Label x:Name="PickupLabel" Text="{Binding UnitsLoaded} " VerticalOptions="Center" FontSize="Small" HorizontalTextAlignment="Center"
			TextColor="{StaticResource DarkestText}"  WidthRequest="70" MinimumWidthRequest="70"/>
		<Label x:Name="DeliveryLabel" Text="{Binding UnitsUnloaded}" VerticalOptions="Center" FontSize="Small" HorizontalTextAlignment="Center"
			TextColor="{StaticResource DarkestText}"  WidthRequest="70" MinimumWidthRequest="70"/>
	</StackLayout>
</l:ExtendedViewCell>
