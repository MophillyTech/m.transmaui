<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
        xmlns:l="clr-namespace:m.transport"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        x:Class="m.transport.TestScanner" Title="Test Scanner">
    <StackLayout Padding="20" BackgroundColor="{StaticResource PrimaryBackground}">
            <Label WidthRequest="50" TextColor="{StaticResource DarkestText}" Text="Scan" VerticalOptions="Center" />
            <Label x:Name="Scanned" Text=" " StyleId="username" WidthRequest="200"
                    TextColor="{StaticResource DarkestText}" BackgroundColor="{StaticResource WhiteBackground}" />
            <Label WidthRequest="50" TextColor="{StaticResource DarkestText}" Text="VIN " VerticalOptions="Center" />
            <Label x:Name="VIN" Text=" " WidthRequest="200" StyleId="username" 
                    TextColor="{StaticResource DarkestText}" BackgroundColor="{StaticResource WhiteBackground}" />
            <Button HorizontalOptions="Center" Text="Scan" WidthRequest="100" Clicked="ScanVIN"
                    BackgroundColor="{StaticResource HighlightBackground}" TextColor="{StaticResource DefaultButtonText}"/>
    </StackLayout>
</ContentPage>