<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
		xmlns:l="clr-namespace:m.transport"
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
		x:Class="m.transport.SelectDamageArea" Title="Damage Area">
	<ContentPage.Content>
		<StackLayout BackgroundColor="{StaticResource PrimaryBackground}" Orientation="Vertical" Padding="0">
			<StackLayout Padding="20,0,0,0" BackgroundColor="{StaticResource DarkBackground}">
				<Label  VerticalOptions="Center" TextColor="{StaticResource LightestText}" x:Name="DamageLocation" />
			</StackLayout>
			<ListView BackgroundColor="{StaticResource PrimaryBackground}" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" x:Name="DamageAreaList" ItemSelected="AreaSelected">
			</ListView>

		</StackLayout>
	</ContentPage.Content>
</ContentPage>
